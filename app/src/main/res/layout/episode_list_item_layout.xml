<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/episode_list_item_container"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dp8"
    android:background="@drawable/item_episode_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/dp8"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp16">

        <TextView
            android:id="@+id/episode_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_color"
            android:textSize="16sp"
            tools:text="@string/big_text_for_test"/>

        <TextView
            android:id="@+id/episode_list_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:maxLines="6"
            android:ellipsize="end"
            android:layout_gravity="end"
            tools:text="@string/big_text_for_test"/>

    </LinearLayout>
    <FrameLayout
        android:layout_weight="0.8"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8">

        <TextView
            android:id="@+id/episode_list_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/date/ddmmyy"
            android:layout_gravity="center|top"
            android:layout_marginEnd="@dimen/dp8"
            android:layout_marginTop="@dimen/dp8" />

        <ImageButton
            android:id="@+id/episode_list_item_star_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_border_black_24dp"
            android:layout_gravity="center|bottom"
            android:background="@null"
            android:padding="@dimen/dp8"/>

    </FrameLayout>

</LinearLayout>